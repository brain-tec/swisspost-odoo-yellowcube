<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Extends the tree view. -->
        <record id="view_document_file_tree_ext" model="ir.ui.view">
            <field name="name">view_document_file_tree_ext</field>
            <field name="model">ir.attachment</field>
			<field name="inherit_id" ref="document.view_document_file_tree" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="docout_state_email" />
                    <field name="docout_state_remote_folder" />
                </field>
            </field>
        </record>
        
        <!-- Extends the form view. -->
        <record id="view_attachment_form_ext" model="ir.ui.view">
            <field name="name">view_attachment_form_ext</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Attached To']" position="after">
                    <group string="Doc-out">
                        <field name="docout_state_email" />
                        <field name="docout_state_remote_folder" />
                        <field name="docout_file_type" />
                        <field name="docout_exported_file_name_email" readonly="True" />
                        <field name="docout_exported_file_name_remote_folder" readonly="True" />
                        <field name="docout_sending_date_email" readonly="True" />
                        <field name="docout_sending_date_remote_folder" readonly="True" />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
