<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	    <record id="post_ecommerce_config_view" model="ir.ui.view">
		    <field name="name">post_ecommerce_config_view</field>
		    <field name="model">configuration.data</field>
		    <field name="inherit_id" ref="pc_connect_master.post_ecommerce_config_view" />
		    <field name="arch" type="xml">
                <page string="Others" position="inside">
                    <group string="YellowCube" colspan="2">
                        <field name="yc_ignore_events_until_process_date" />
                        <field name="yc_customer_order_no_mode" />
                    </group>
                    <group string="Yellowcube Delivery Confirmation" colspan="2">
                        <field name="tracking_email_active" />
                        <field name="tracking_email_template_id"
                               attrs="{'invisible':[('tracking_email_active', '=', False)]}"/>
                    </group>
                </page>

                <page string="Products - Batch Management" position="inside">
                    <group string="Mapping from BUR-TransactionTypes" colspan="2">
                        <field name="mapping_bur_transactiontypes_ids" nolabel="1" colspan="2" cols="2" />
                    </group>
                </page>
		    </field>
		</record>

    </data>
</openerp>
