<openerp>
	<data>
        <!-- stock.picking.in -->
		<record id="stock_picking_in_returns" model="ir.ui.view">
			<field name="name">stock_picking_in_returns</field>
			<field name="model">stock.picking.in</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Returns"
						attrs="{'readonly': [('state', 'not in', ['draft'])]}">
						<group>
							<field name="type" readonly="1" />
							<field name="yellowcube_customer_order_no" readonly="1" />
							<field name="yellowcube_return_automate" colspan="2" />
							<field name="yellowcube_return_origin_order" colspan="2" />
							<field name="yellowcube_return_reason" colspan="2" />
						</group>
					</page>
				</notebook>
			</field>
		</record>
        <record id="stock_picking_in_tree_ext" model="ir.ui.view">
            <field name="name">yc_stock_picking_in_tree_ext</field>
            <field name="inherit_id" ref="stock.view_picking_in_tree" />
            <field name="model">stock.picking.in</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="yellowcube_customer_order_no" />
                </field>
            </field>
        </record>
        <record id="stock_picking_in_search_ext" model="ir.ui.view">
            <field name="name">yc_stock_picking_in_search_ext</field>
            <field name="inherit_id" ref="stock.view_picking_in_search" />
            <field name="model">stock.picking.in</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="yellowcube_customer_order_no"
                        string="YC Customer Order No"
                        filter_domain="[('yellowcube_customer_order_no','ilike',self)]"/>
                </field>
            </field>
        </record>
        <record id="view_picking_in_form_ext_2" model="ir.ui.view">
            <field name="name">view_picking_in_form_ext_2</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
                <field name="date_done" position="after">
                    <field name="yellowcube_last_confirmation_timestamp"
                           readonly="True" />
                </field>
            </field>
        </record>

        <!-- stock.picking.out -->
		<record id="stock_picking_out_tree_ext" model="ir.ui.view">
            <field name="name">yc_stock_picking_out_tree_ext</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree" />
            <field name="model">stock.picking.out</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="yellowcube_customer_order_no" />
                </field>
            </field>
		</record>

        <record id="view_picking_withcarrier_out_form_ext" model="ir.ui.view">
            <field name="name">view_picking_withcarrier_out_form_ext</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
            <field name="model">stock.picking.out</field>
            <field name="arch" type="xml">
                <field name="carrier_tracking_ref" position="after">
                    <field name="carrier_tracking_url" widget="url"
                           attrs="{'invisible':[('carrier_tracking_url','=',False)]}"/>
                </field>
            </field>
		</record>

        <record id="stock_picking_out_search_ext" model="ir.ui.view">
            <field name="name">yc_stock_picking_out_search_ext</field>
            <field name="inherit_id" ref="stock.view_picking_out_search" />
            <field name="model">stock.picking.out</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="yellowcube_customer_order_no"
                        string="YC Customer Order No"
                        filter_domain="[('yellowcube_customer_order_no','ilike',self)]"/>
                </field>
            </field>
        </record>

        <record id="view_picking_out_form_ext" model="ir.ui.view">
            <field name="name">view_picking_out_form_ext</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form" />
            <field name="arch" type="xml">
                <field name="date_done" position="after">
                    <field name="yellowcube_last_confirmation_timestamp"
                           readonly="True" />
                </field>
            </field>
        </record>

	</data>
</openerp>
