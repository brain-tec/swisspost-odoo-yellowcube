<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_connect_transport_api_log_form">
            <field name="name">Connect Transport API Log</field>
            <field name="model">connect.transport.api.log</field>
            <field name="arch" type="xml">
                <form string="Logs" create="false" edit="false">
                    <group col="2">
                        <field name="connect_transport_profile" />
                        <field name="state" />
                        <field name="create_date" />
                        <field name="external_uid" />
                        <field name="method" />
                        <field name="args" />
                        <field name="exc_info" />
                    </group>
                </form>
            </field>
        </record> 

        <record model="ir.ui.view" id="view_connect_transport_api_log_search">
            <field name="name">Connect Transport API Log</field>
            <field name="model">connect.transport.api.log</field>
            <field name="arch" type="xml">
                <search string="Logs">
                    <field name="external_uid" />
                    <field name="method" />
                    <field name="connect_transport_profile" />
                    <filter name="type_failure" string="Failures" domain="[('state', '=', 'failure')]" />
                    <filter name="type_success" string="Successes" domain="[('state', '=', 'success')]" />
                    <separator />
                    <!--filter name="past24h" string="Past 24h"
                        domain="[('create_date', '!=', False), ('create_date', '>=', (context_timestamp() - relativedelta(hours=24)).strftime('%%Y-%%m-%%d %%H:%%M:%%S'))]" /-->
                    <filter name="past2days" string="Past 2 days"
                        domain="[('create_date', '!=', False), ('create_date', '>=', (context_today() - relativedelta(days=1)).strftime('%%Y-%%m-%%d'))]" />
                    <filter name="current_month" string="This Month"
                        domain="[('create_date', '!=', False), ('create_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%%Y-%%m-%%d')), ('create_date', '>=', (context_today() - relativedelta(day=1)).strftime('%%Y-%%m-%%d'))]" />
                    <group expand="0" string="Group By...">
                        <filter string="Connect Transport Profile" context="{'group_by': 'connect_transport_profile'}" />
                        <filter string="State" context="{'group_by': 'state'}" />
                        <filter string="Method" context="{'group_by': 'method'}" />
                        <filter string="User" context="{'group_by': 'external_uid'}" />
                        <filter icon="terp-go-month" string="Month"
                            context="{'group_by': 'create_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_connect_transport_api_log_tree">
            <field name="name">Connect Transport API Log</field>
            <field name="model">connect.transport.api.log</field>
            <field name="arch" type="xml">
                <tree string="Logs">
                    <field name="connect_transport_profile" />
                    <field name="state" />
                    <field name="create_date" />
                    <field name="external_uid" />
                    <field name="method" />
                    <field name="args" />
                </tree>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="action_log">
            <field name="name">Connect Transport API Logs</field>
            <field name="res_model">connect.transport.api.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_connect_transport_api_log_search" />
        </record>

        <menuitem
            id="menu_logs"
            name="Logs"
            parent="menu_root"
            sequence="20"
            action="action_log"
        />

    </data>
</openerp>

