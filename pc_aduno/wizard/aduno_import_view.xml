<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Import Aduno Wizard -->
    <record id="aduno_import_view" model="ir.ui.view">
      <field name="name">Aduno Import Wizard</field>
      <field name="model">aduno.import.wizard</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Aduno Import" version="7.0">
          <field invisible="1" name="state" />

          <group width="525" colspan="4" states="all_fields_filled_in">
            <field name="file"/>
            <newline/>
            <group colspan="4">
              <button name="import_aduno" string="Import" type="object" icon="gtk-ok"  colspan="2"/>
            </group>
          </group>

          <group width="525" colspan="4" states="some_fields_not_filled_in">
            <p>Fields merchant_id and/or merchant_subsidiary_id from the Bank Statements Profile are not set.</p>
          </group>

          <button special="cancel" string="Cancel" icon="gtk-cancel"  colspan="2"/>

        </form>
      </field>
    </record>

    <record id="wizard_aduno_import" model="ir.actions.act_window">
      <field name="name">Aduno Import</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">aduno.import.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="aduno_import_view"/>
      <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="view_bank_statement_form">
      <field name="name">account.bank.statement.form.inherit</field>
      <field name="model">account.bank.statement</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.view_bank_statement_form"/>
      <field name="arch" type="xml">
        <div name="import_buttons" position="inside">
          <button name="%(wizard_aduno_import)d" states="draft,open" string="Import Aduno EVG File" type="action"/>
        </div>
      </field>
    </record>
    
    <record id="confirmation_view" model="ir.ui.view">
      <field name="name">Aduno import successful</field>
      <field name="model">confirmation.summary</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Import successful">
          <field name="summary"></field>
            <button special="cancel" string="OK" class="oe_highlight"/>
        </form>
      </field>
    </record>
    
  </data>
</openerp>
