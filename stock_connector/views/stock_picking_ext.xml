<odoo>
    <record id="stock_view_picking_form_ext" model="ir.ui.view">
        <field name="name">stock_view_picking_form_ext_add_return_type</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field
                    name="return_type_id"
                    attrs="{'readonly': [('state', 'in', ['cancel', 'done'])]}"
                />
                <field
                    name="do_not_sync_with_connector"
                    attrs="{'readonly': [('state', 'in', ['cancel', 'done'])]}"
                />
            </field>
        </field>
    </record>
    <record id="stock_view_picking_type_form_ext" model="ir.ui.view">
        <field name="name">stock_view_picking_type_form_ext_add_return_type</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <field name="return_picking_type_id" position="after">
                <field name="return_type_id"/>
                <field name="do_not_sync_with_connector"/>
            </field>
        </field>
    </record>
</odoo>