<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="stock_connector_event_view_kanban">
            <field name="name">stock_connector.event.kanban</field>
            <field name="model">stock_connector.event</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="state"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="res_model"/>
                    <field name="res_id"/>
                    <field name="create_date"/>
                    <templates>
                    <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">

                                <div class="oe_kanban_content">
                                    <div t-attf-class="kanban_stock_connector__state_#{record.state.raw_value or ''}">
                                        <field name="state"/>
                                    </div>
	                                <div>
	                                    <field name="name"/>
	                                </div>
	                                <div>
	                                    <field name="create_date"/>
	                                </div>
	                                <div t-attf-class="kanban_stock_connector_event_code_#{record.code.raw_value.replace('.', '_') or ''}">
	                                    <field name="code"/>
	                                </div>
	                                <div>
	                                    <strong><field name="res_model"/></strong>:<field name="res_id"/>
	                                </div>

	                                <div t-if="record.state.raw_value=='ready'">
	                                    <button type="object" name="process_event">Process</button>
	                                </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="stock_connector_event_view_form" model="ir.ui.view">
            <field name="name">stock_connector.event.form</field>
            <field name="model">stock_connector.event</field>
            <field name="arch" type="xml">
                <form string="Warehouse Event">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="context"/>
                            <field name="info"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_connector_event_view_tree" model="ir.ui.view">
            <field name="name">stock_connector.event.tree</field>
            <field name="model">stock_connector.event</field>
            <field name="arch" type="xml">
                <tree string="Warehouse Event">
                    <field name="state"/>
                    <field name="code"/>
                    <field name="res_model"/>
                    <field name="res_id"/>
                </tree>
            </field>
        </record>

        <record id="stock_connector_event_action" model="ir.actions.act_window">
            <field name="name">Warehouse Events</field>
            <field name="res_model">stock_connector.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="stock_connector_event_view_kanban"/>
        </record>

        <record id="stock_connector_event_execute_action" model="ir.actions.server">
            <field name="name">Execute Event</field>
            <field name="model_id"
                   ref="stock_connector.model_stock_connector_event"/>
            <field name="code">
log('Auto-executing events')
ctx = context.copy()
ctx['auto_backend'] = True
self.pool['stock_connector.event'].process_event(
    cr, uid, ctx['active_id'], context=ctx)
            </field>
        </record>

    </data>
</odoo>