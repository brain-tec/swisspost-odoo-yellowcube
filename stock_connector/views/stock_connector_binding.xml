<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_connector_binding_tree_view" model="ir.ui.view">
            <field name="name">stock_connector_binding_tree_view</field>
            <field name="model">stock_connector.binding</field>
            <field name="arch" type="xml">
                <tree string="Bindings" editable="top">
                    <field name="backend_id" invisible="1"/>
                    <field name="group"/>
                    <field name="binding"/>
                    <field name="xml_id"/>
                    <field name="res_model" required="0"/>
                    <field name="res_id" required="0"/>
                    <field name="name" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="stock_connector_binding_action" model="ir.actions.act_window">
            <field name="name">Warehouse Bindings</field>
            <field name="res_model">stock_connector.binding</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_connector_binding_tree_view"/>
            <field name="domain">[("backend_id", "=", active_id)]</field>
            <field name="context">{"default_backend_id": active_id}</field>
        </record>
    </data>
</odoo>