<openerp>
    <data>

        <record id="view_picking_form_ext" model="ir.ui.view" >
            <field name="name">view_picking_form_ext</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <field name="min_date" position="after">
                	<field name="process_date" />
                </field>
                <xpath expr="//page[@string='Additional Info']" position="inside">
                    <group groups="pc_connect_master.pc_client_care,pc_connect_master.pc_admin">
                        <label for="event_ids" colspan="4"/>
                        <field name="event_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_picking_out_form_ext2" model="ir.ui.view">
            <field name="name">view_picking_out_form_ext2</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Additional Info']" position="inside">
                    <group groups="pc_connect_master.pc_client_care,pc_connect_master.pc_admin">
                        <label for="event_ids" colspan="4"/>
                        <field name="event_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_picking_out_form_ext3" model="ir.ui.view">
            <field name="name">view_picking_out_form_ext2</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Additional Info']" position="inside">
                    <group groups="pc_connect_master.pc_client_care,pc_connect_master.pc_admin">
                        <label for="event_ids" colspan="4"/>
                        <field name="event_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
