<openerp>
	<data>
        <!-- Search view -->
        <record id="view_stock_event_search" model="ir.ui.view">
            <field name="name">stock.event.search</field>
            <field name="model">stock.event</field>
            <field name="arch" type="xml">
                <search string="Warehouse Event">
                    <field name="res_id" default_focus="1"/>
                    <field name="model"/>
                    <field name="event_code"/>
                    <filter icon="terp-go-home" name="important" string="Under Review" domain="['|',('error','=',True),('state', 'not in', ['done', 'cancel', 'ignore'])]"/>
                    <group expand="1" string="Group By...">
                        <filter name="group_state" string="State" icon="terp-gtk-jump-to-rtl" context="{'group_by':'state'}"/>
                        <filter name="group_model" string="Model" icon="terp-gtk-jump-to-rtl" context="{'group_by':'model'}"/>
                        <filter name="group_event_code" string="Code" icon="terp-accessories-archiver" context="{'group_by':'event_code'}"/>
                    </group>
                </search>
            </field>
        </record>

		<!-- Tree view. -->
		<record id="view_stock_event_tree" model="ir.ui.view">
			<field name="name">stock.event.tree</field>
			<field name="model">stock.event</field>
			<field name="priority">9999</field>
			<field name="arch" type="xml">
				<tree string="Warehouse Event" colors="red:error==True;green:state=='done';orange:state=='cancel'">
					<field name="create_date" />
					<field name="warehouse_id" />
					<field name="event_code" />
					<field name="state" />
					<field name="error" />
					<field name="model" />
					<field name="res_id" />
				</tree>
			</field>
		</record>

		<!-- Form view. -->
		<record id="view_stock_event_form" model="ir.ui.view">
			<field name="name">stock.event.form</field>
			<field name="model">stock.event</field>
			<field name="priority">9999</field>
			<field name="arch" type="xml">
				<form string="Warehouse Event">
					<group string="Information" colspan="4">
						<field name="create_date" readonly="True" colspan="2"/>
						<field name="write_date" readonly="True" colspan="2"/>
                        <field name="warehouse_id" readonly="True" colspan="2" />
						<field name="event_code" colspan="4"/>
						<field name="state" colspan="2"/>
						<field name="error" colspan="2"/>
						<field name="context" colspan="4"/>
						<field name="model" colspan="2"/>
						<field name="res_id" colspan="2"/>
						<button type="object" name="open_record" string="Open record" colspan="4"/>
						<field name="info" colspan="4"/>
					</group>
				</form>
			</field>
		</record>

		<!-- Receives the action. -->
		<record id="action_stock_connect_event" model="ir.actions.act_window">
			<field name="name">Warehouse Events</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.event</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="context">{'search_default_important': True}</field>
		</record>


        <record
			id="action_reset_event_error"
			model="ir.actions.server">
			<field name="name">Reset Error</field>
			<field
				name="model_id"
				ref="model_stock_event" />
			<field name="state">code</field>
			<field name="code">self.write(cr, uid, context['active_ids'], {'error': False},	context=context)</field>
		</record>
        <record
			model="ir.values"
			id="open_reset_event_error">
			<field name="name">Reset Error</field>
			<field name="key2">client_action_multi</field>
			<field
				name="value"
				eval="'ir.actions.server,' + str(ref('action_reset_event_error'))" />
			<field name="key">action</field>
			<field name="model">stock.event</field>
		</record>
	</data>
</openerp>