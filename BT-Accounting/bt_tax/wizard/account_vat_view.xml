            parent="account.menu_finance_reporting" sequence="3"/-->

        <menuitem
            name="Cust Taxes Report"
            parent="bt_account.menu_ch_report"
            action="action_cust_account_vat_declaration"
            id="menu_cust_account_vat_declaration"
            icon="STOCK_PRINT"/>

    </data>
</openerp>
