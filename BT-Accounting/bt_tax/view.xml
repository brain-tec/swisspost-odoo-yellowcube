<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
        <report
            auto="False"
            id="account_vat_declaration_cust"
            menu="False"
            model="account.tax.code"
            name="account.vat.declaration.cust"
            rml="bt_tax/report/account_tax_report.rml"
            string="Taxes Report Cust"/>
            
        <!--<menuitem
            id="menu_tax_report"
            name="Taxes"
            groups="account.group_account_user,account.group_account_manager"
            parent="account.menu_finance_generic_reporting" sequence="3"/>-->

        <record model="ir.ui.view" id="extended_tax_code_view">
            <field name="name">Extended Form View For Tax Code</field>
            <field name="model">account.tax.code</field>
            <field name="inherit_id" ref="account.view_tax_code_form"/>
            <field name="priority" eval="21" /> 
            <field name="arch" type="xml">
            <data>
                <xpath expr="/form/group/group/field[@name='parent_id']" position="after">
                	<field name="value_for_tax_report_column_tax"/>
                </xpath>
                <xpath expr="/form/group/group/field[@name='sum']" position="after">
                	<field name="show_in_tax_journal"/>
                    <field name="is_sales_tax"/>
					<field name="active"/>
                </xpath>
            </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_move_line_tree_tax_ext">
            <field name="name">account.move.line.tree.tax.ext</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_tax_id']" position="replace">
                    <field name="tax_code_id"/>
                </xpath>
            </field>
        </record>
        
        
        <record id="view_account_move_line_filter_ext" model="ir.ui.view">
            <field name="name">Journal Items EXT</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@string='Period']" position="after">
                    <filter string="Account Tax" icon="terp-partner" domain="[]" context="{'group_by':'tax_code_id'}"/>
                </xpath>
            </field>
        </record>
        
	</data>
</openerp>


