        <record id="view_move_line_tree_reconcile_ext" model="ir.ui.view">
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree_reconcile" />
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="amount_currency"/>
                    <field name="currency_id"/>
                </xpath>
                <xpath expr="//field[@name='reconcile_partial_id']" position="before">
                    <field name="reconcile_id"/>
                </xpath>            
            </field>
        </record>
        
        <record id="invoice_form_ext" model="ir.ui.view">
            <field name="name">account.invoice.form.ext</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="/form/sheet/group/group/field[@name='account_id']" position="after">
                    <label for="round_inv_to_05" groups="bt_account.group_round_to_0_05"/>
                	<div groups="bt_account.group_round_to_0_05">
                		<field name="round_inv_to_05" nolabel="1" readonly="True" class="oe_inline" groups="bt_account.group_round_to_0_05" options="{'send_to_server': True}"/>
                        <button name="change_rounding" 
                            string="Change rounding" class="oe_link oe_edit_only"
                            type="object" help="Change rounding" attrs="{'invisible': [('state','!=','draft')]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='invoice_line']/tree[1]" position="inside">
                    <field name="price_total"/>
                    <field name="price_total_less_disc" invisible="0" />
                </xpath>
            </data>
            </field>
        </record>
        
        <record id="invoice_supplier_form_ext" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.ext</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="/form/sheet/group/group/field[@name='currency_id']" position="after">
                    <label for="round_inv_to_05" groups="bt_account.group_round_to_0_05"/>
                	<div groups="bt_account.group_round_to_0_05">
                		<field name="round_inv_to_05" nolabel="1" readonly="True" class="oe_inline" groups="bt_account.group_round_to_0_05" options="{'send_to_server': True}"/>
                        <button name="change_rounding" 
                            string="Change rounding" class="oe_link oe_edit_only"
                            type="object" help="Change rounding" attrs="{'invisible': [('state','!=','draft')]}"/>
                    </div>
                </xpath>
                <field name="account_analytic_id" position="attributes">
                    <attribute name="domain">[('type','!=','view'), ('company_id', '=', parent.company_id), ('state','!=','close')]</attribute>
                </field>
            </data>
            </field>
        </record>
        
        <record id="account_invoice_groupby_currency" model="ir.ui.view">
            <field name="name">account.invoice.groupby.currency</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[@string='Due Date']" position="after">
                    <filter string="Currency" domain="[]" context="{'group_by':'currency_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
