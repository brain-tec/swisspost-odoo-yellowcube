<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_cust_account_oplist" model="ir.ui.view">
            <field name="name">Cust Account OP List</field>
            <field name="model">account.oplist.cust</field>
            <field name="arch" type="xml">
            <form string="Cust OP List Report">
                <separator string="Cust OP List Report" colspan="4"/>
                <label colspan="4" nolabel="1" string="This menu prints the op list report."/>
                <newline/>
                <field name="company_id"/>
				<field name="partner_id"/>
				<field name="result_selection"/>
                <field name="date2"/>
                <field name="filter_on_periods"/>
                <group col="2" colspan="4">
                    <button icon='gtk-cancel' special="cancel"  string="Cancel" />
                    <button name="create_oplist" string="Print OP List Report" colspan="1" type="object" icon="gtk-ok"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_cust_account_oplist" model="ir.actions.act_window">
            <field name="name">Cust Account OP List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.oplist.cust</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help">This menu print a OP List based on invoices or payments. You can select one or several periods of the fiscal year. Information required for a tax declaration is automatically generated by OpenERP from invoices (or payments, in some countries). This data is updated in real time. That's very useful because it enables you to preview at any time the tax that you owe at the start and end of the month or quarter.</field>
        </record>

        <menuitem
            name="Cust OP List Report"
            parent="bt_account.menu_ch_report"
            action="action_cust_account_oplist"
            id="menu_cust_account_oplist"
            icon="STOCK_PRINT"/>

    </data>
</openerp>
