<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record id="post_ecommerce_config_view_ext" model="ir.ui.view">
            <field name="name">post_ecommerce_config_view_ext</field>
            <field name="model">configuration.data</field>
            <field name="inherit_id" ref="pc_connect_master.post_ecommerce_config_view" />
            <field name="arch" type="xml">
                <page string="Reports" position="inside">
                    <group string="Invoices for PF">
                        <field name="invoice_pf_logo" />
                        <field name="invoice_pf_ending_text" />
                        <field name="invoice_pf_report_discount_column_text" />
                        <field name="invoice_pf_report_discount_column_type" />
                        <field name="invoice_pf_logo_max_width" />
                        <field name="invoice_pf_logo_top" />
                        <field name="invoice_pf_report_num_lines_per_page_first" />
                        <field name="invoice_pf_report_num_lines_per_page_not_first" />

                    </group>
                </page>
            </field>
        </record>

		<record id="account_invoice_reports_config_view" model="ir.ui.view">
			<field name="name">account_invoice_reports_config_view</field>
			<field name="model">configuration.data</field>
			<field name="inherit_id" ref="pc_generics.reports_config_view" />
			<field name="arch" type="xml">
                <page string="Post Mail" position="inside">
                    <group string="Invoices for PF" colspan="1">
                        <field name="invoice_pf_franking_country_code" />
                        <field name="invoice_pf_franking_zip" />
                        <field name="invoice_pf_franking_town" />
                        <field name="invoice_pf_postmail_rrn" />
                        <field name="invoice_pf_qr" />
                    </group>
                </page>
            </field>
        </record>

    </data>
</openerp>
