<openerp>
	<data>
		<record id="standard_view_report_view_form" model="ir.ui.view">
			<field name="name">report.view.view_form</field>
			<field name="model">report.view</field>
			<field name="arch" type="xml">
				<form string="Standard view report" version="7.0">
					<header>

					</header>
					<sheet>
						<group col="2">
							<field name="model_id" domain="[('model', 'in', ['sale.order', 'product.product'])]"
								on_change="onchange_fields(model_id, filter_id)" />
							<field name="view_id" attrs="{'invisible': [('model_id','=',False)]}" />
							<field name="filter_id" attrs="{'invisible': [('model_id','=',False)]}" />
							<field name="groupby_id" attrs="{'invisible': [('model_id','=',False)]}" />
							<button name="open_view" type="object" string="Open view"
								attrs="{'invisible': [('model_id','=',False)]}" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="standard_view_report_view_tree" model="ir.ui.view">
			<field name="name">report.view.view_tree</field>
			<field name="model">report.view</field>
			<field name="arch" type="xml">
				<tree string="Standard view report" version="7.0">
					<button name="open_view" type="object" string="Open view" class="oe_highlight" icon="gtk-open" />
					<field name="model_id"/>
					<field name="filter_id"/>
					<field name="groupby_id" />
				</tree>
			</field>
		</record>

		<record id="standard_view_report_view_search" model="ir.ui.view">
			<field name="name">report.view.search</field>
			<field name="model">report.view</field>
			<field name="arch" type="xml">
				<search string="Standard view report" version="7.0">
					<field name="model_id" />
					<field name="filter_id" />
					<field name="groupby_id" />
					<filter name="grouping" context="{'group_by': ['model_id', 'filter_id']}" />
				</search>
			</field>
		</record>

		<record id="action_standard_view_report" model="ir.actions.act_window">
			<field name="name">Standard View Reports</field>
			<field name="res_model">report.view</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_grouping': 1}</field>
		</record>
		
		<!-- sale.order.line -->
		<record id="standard_view_report_tree_for_sale_order_line" model="ir.ui.view">
			<field name="name">report.view.sale.order.line</field>
			<field name="model">sale.order.line</field>
			<field name="arch" type="xml">
				<tree string="Item Sales" version="7.0"><field name="state"/>
					<field name="sale_date"/>
					<field name="product_id"/>
					<field name="product_uom_qty" />
					<field name="product_uom" />
					<field name="xx_price_subtotal" />
					<field name="tax_id" />
				</tree>
			</field>
		</record>
	</data>
</openerp>