<openerp>
    <data>

        <!-- Tree view. -->
        <record id="delivery_carrier_yc_option_tree_view" model="ir.ui.view">
            <field name="name">delivery_carrier_yc_option_tree_view</field>
            <field name="model">delivery.carrier.yc_option</field>
            <field name="arch" type="xml">
                <tree string="Delivery Carrier YC Option" editable="bottom">
                    <field name="code" />
                </tree>
            </field>
        </record>

        <!-- Form view. -->
        <record id="delivery_carrier_yc_option_form_view" model="ir.ui.view">
            <field name="name">delivery_carrier_yc_option_form_view</field>
            <field name="model">delivery.carrier.yc_option</field>
            <field name="arch" type="xml">
                <form string="Delivery Carrier YC Option">
                    <field name="code" />
                </form>
            </field>
        </record>

        <!-- Receives the action. -->
        <record id="action_delivery_carrier_yc_option" model="ir.actions.act_window">
			<field name="name">Delivery Carrier YC Option</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">delivery.carrier.yc_option</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

        <!-- Define the view to be used for the tree view. -->
		<record id="action_delivery_carrier_yc_option_tree" model="ir.actions.act_window.view">
			<field name="sequence" eval="0" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="delivery_carrier_yc_option_tree_view" />
			<field name="act_window_id" ref="action_delivery_carrier_yc_option" />
		</record>

		<!-- Define the view to be used for the form view. -->
		<record id="action_delivery_carrier_yc_option_form" model="ir.actions.act_window.view">
			<field name="sequence" eval="0" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="delivery_carrier_yc_option_form_view" />
			<field name="act_window_id" ref="action_delivery_carrier_yc_option" />
		</record>

        <!-- Menu-item. -->
        <menuitem name="Delivery Methods YC Option"
                  id="menu_delivery_carrier_yc_option"
                  parent="stock.menu_stock_configuration"
                  action="action_delivery_carrier_yc_option"
                  sequence="15"/>

    </data>
</openerp>
