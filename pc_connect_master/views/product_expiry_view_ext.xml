            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
            <field name="arch" type="xml">

                <group string="Dates" position="inside">
                    <group colspan="2">
                        <label for="expiration_block_time" />
