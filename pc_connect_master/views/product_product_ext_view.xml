<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record id="view_product_form_expiry_ext" model="ir.ui.view">
            <field name="name">view_product_form_expiry_ext</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
            <field name="arch" type="xml">
                <field name="life_time" position="attributes">
                    <attribute name="string">Product Life Time (days)</attribute>
                </field>
                <field name="use_time" position="attributes">
                    <attribute name="string">Product Use Time (days)</attribute>
                </field>
                <field name="removal_time" position="attributes">
                    <attribute name="string">Product Removal time (days)</attribute>
                </field>
                <field name="alert_time" position="attributes">
                    <attribute name="string">Product Alert Time (days)</attribute>
                </field>
            </field>
        </record>

        <record id="view_normal_procurement_locations_form_ext" model="ir.ui.view">
            <field name="name">view_normal_procurement_locations_form_ext</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="arch" type="xml">
                <group string="Stock and Expected Variations" position="attributes">
                    <attribute name="groups">base.group_user,pc_connect_master.pc_client</attribute>
                </group>
                <field name="virtual_available" position="after">
                    <field name="qty_on_assigned_moves" />
                </field>
            </field>
        </record>

        <record id="view_product_normal_form" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">

                <page string="Inventory" position="attributes">
                    <attribute name="groups">base.group_user,pc_connect_master.pc_client</attribute>
                </page>

                <field name="state" position="after">
                    <field name="webshop_state" />
                    <field name="target_state" />
                </field>

                <field name="weight" position="attributes">
                    <attribute name="on_change">onchange_check_decimals(weight, 'Stock Weight')</attribute>
                    <attribute name="string">Weight (Kg)</attribute>
                    <attribute name="colspan">2</attribute>
                </field>
                <field name="weight_net" position="attributes">
                    <attribute name="on_change">onchange_check_decimals(weight_net, 'Stock Weight')</attribute>
                    <attribute name="string">Net Weight (Kg)</attribute>
                </field>
                <field name="volume" position="attributes">
                    <attribute name="on_change">onchange_check_decimals(volume, 'Stock Volume')</attribute>
                    <attribute name="string">Volume (m^3)</attribute>
                </field>
                
                <group name="Weights" position="after">
                    <!-- These are the new dimensions indicated in the task with ID=2827 -->
                    <group name="dimensions" string="Dimensions">
                        <field name="length" on_change="onchange_check_decimals(length, 'Stock Length')"
                            string="Length (cm)" />
                        <field name="width" on_change="onchange_check_decimals(width, 'Stock Width')"
                            string="Width (cm)" />
                        <field name="height" on_change="onchange_check_decimals(height, 'Stock Height')"
                            string="Height (cm)" />
                        <field name="diameter" on_change="onchange_check_decimals(diameter, 'Stock Diameter')"
                            string="Diameter (cm)" />
                        <field name="packing"
                            string="Packing (cm^3 x Kg)" />
                    </group>
                </group>

                <page string="Information" position="after">
                    <page string="Other Information">

                        <group name="other_information" string="Other Information">
                            <field name="color"/>
                            <field name="brand"/>
                            <field name="manufacturer_website"/>
                        </group>

                    </page>
                </page>

                <!-- Adds the tab for the support information. -->
                <page string="Accounting" position="after">
                    <page string="Help &amp; Support">
                        <!-- To be filled in with remarks related to help & support. -->
                    </page>
                </page>

                <group name="procurement" position="after">
                    <group name="cost_price_historical_data" colspan="2">
                        <separator string="Cost Price Historical" />
                        <field name="standard_price_historical_ids" nolabel="1" readonly="1" colspan="2" />
                    </group>
                </group>

            </field>
        </record>

		<record
			id="product_product_ext_view_form"
			model="ir.ui.view">
			<field name="name">product.normal.form_ext</field>
			<field name="model">product.product</field>
			<field
				name="inherit_id"
				ref="stock.view_normal_procurement_locations_form" />
			<field
				name="arch"
				type="xml">
				<data>
					<field
						name="virtual_available"
						position="after">
						<field name="product_reservation_qty" />
					</field>
					<field
						name="product_reservation_qty"
						position="after">
						<field name="qty_on_sale" />
					</field>
					<group
						name="lot"
						position="after"
						version="7.0">
						<group
							string="Stock by lot number"
							attrs="{'invisible': [('type', '=', 'service')]}"
							groups="stock.group_stock_manager,pc_connect_master.pc_client"
							colspan="4">
							<field
								name="stock_prodlots"
								nolabel='1'
								colspan="4" />
							<!-- domain="[('location_id.location_id.name', '=', 'YellowCube')]" /> -->
						</group>
						<group
							string='Appearence in quotations'
							attrs="{'invisible': [('type', '=', 'service')]}"
							groups="stock.group_stock_manager,pc_connect_master.pc_client"
							colspan="4">
							<field
								name="draft_sale_order_lines"
								nolabel='1'
								colspan="4" />
						</group>
					</group>
				</data>
			</field>
		</record>

		<record
			id="product_product_prodlots_tree"
			model="ir.ui.view">
			<field name="name">stock.report.prodlots.tree</field>
			<field name="model">stock.report.prodlots</field>
			<field
				name="arch"
				type="xml">
				<tree string="Serial Numbers">
					<field name="prodlot_id" />
					<field name="location_id" />
					<field name="qty" />
				</tree>
			</field>
		</record>

        <record id="view_product_standard_price_form_ext_view" model="ir.ui.view">
            <field name="name">view_product_standard_price_form_ext_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_product_standard_price_form"/>
            <field name="arch" type="xml">

                <!-- We extend the readonly to consider also average_invoice. -->
                <field name="standard_price" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('cost_method','=','average'), ('cost_method', '=', 'average_invoice')]}</attribute>
                </field>
                <!-- We extend the invisible of the button which updates the price manually to also consider average_invoice. -->
                <button name="%(stock.action_view_change_standard_price)d" position="attributes">
                    <attribute name="attrs">{'invisible': [('cost_method','&lt;&gt;','average'), ('cost_method','&lt;&gt;','average_invoice')]}</attribute>
                </button>

            </field>
        </record>

	</data>
</openerp>
