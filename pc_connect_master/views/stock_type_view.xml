<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Stock Type -->

        <record id="view_stock_type_tree" model="ir.ui.view">
            <field name="name">stock.type.tree</field>
            <field name="model">stock.type</field>
            <field name="arch" type="xml">
                <tree string="Stock Type">
                    <field name="name"/>
                    <field name="credit_check"/>
                    <field name="availability_check"/>
                    <field name="dropship"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_type_form" model="ir.ui.view">
            <field name="name">stock.type.form</field>
            <field name="model">stock.type</field>
            <field name="arch" type="xml">
                <form string="Stock Type" version="7.0">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="credit_check" />
                        <field name="availability_check" />
                        <field name="dropship" />
                        <field name="consider_aging" />
                    </group>
                    <group>
                        <field name="forced_picking_policy" />
                        <field name="route" />
                        <field name="warehouse_id" />
                        <field name="supplier_payment_term_id" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_stock_type" model="ir.actions.act_window">
            <field name="name">Stock Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new stock type.
              </p><p>
                Each delivery methods can have a different stock type set.
              </p><p>
                These stock types allows to route the sale orders having those
                delivery methods through the Sale Order Automation (SOA)
                procedure, and to print the correct version of the reports.
              </p>
            </field>
        </record>

        <record id="action_view_stock_type_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="0" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_stock_type_tree" />
            <field name="act_window_id" ref="action_stock_type" />
        </record>

        <record id="action_view_stock_type_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="0" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_stock_type_form" />
            <field name="act_window_id" ref="action_stock_type" />
        </record>

        <menuitem name="Stock Types"
                  id="menu_action_stock_type_form"
                  parent="stock.menu_stock_configuration"
                  action="action_stock_type"
                  sequence="14"/>
    </data>
</openerp>
