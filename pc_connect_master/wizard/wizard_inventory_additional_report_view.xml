<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>


		<record model="ir.actions.act_window" id="action_wiz_inventory_additional_report">
			<field name="name">Inventory Additional Analysis</field>
			<field name="src_model">pc_connect_master.inventory_additional_report</field>
			<field name="res_model">pc_connect_master.wiz_inventory_additional_report</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record model="ir.ui.view" id="wiz_inventory_additional_report_form">
			<field name="name">pc_connect_master.wiz_inventory_additional_report</field>
			<field name="model">pc_connect_master.wiz_inventory_additional_report</field>
			<field name="priority" eval="16" />
			<field name="arch" type="xml">
				<form string="Inventory Additional Analysis" col="4" version="7.0">
					<header>
						<button type="special" special="cancel" string="Cancel"
							icon="gtk-cancel" />

						<button type="object" name="action_open" string="Open Report"
							icon="gtk-apply" />
					</header>

					<sheet>
                        <group>
                            <field name="date" />
                            <p>- or -</p><br/>
                            <field name="period" on_change="onchange_period(period)"/>
                        </group>
                        <group>
                            <field name="location_id" />
                            <field name="location_dest_id" />
                        </group>
					</sheet>

				</form>
			</field>
		</record>

        <record id="inventory_additional_report_summary" model="ir.ui.view">
            <field name="name">pc_connect_master.inventory_additional_report_summary</field>
            <field name="model">pc_connect_master.inventory_additional_report</field>
            <field name="priority">9999</field>
            <field name="arch" type="xml">
                <tree string="Inventory Additional Analysis" create="false">
                    <field name="product_id"/>
                    <field name="date_first"/>
                    <field name="qty"/>
                    <field name="qty_12"/>
                    <field name="qty_3"/>
                    <field name="qty_diff"/>
                    <field name="price"/>
                    <field name="stock_value"/>
                </tree>
            </field>
        </record>


    <record id="inventory_additional_report_search" model="ir.ui.view">
        <field name="name">rpc_connect_master.inventory_additional_report_search</field>
        <field name="model">pc_connect_master.inventory_additional_report</field>
        <field name="arch" type="xml">
            <search string="Inventory Analysis">
                <field name="product_id" default_focus="1"/>
            </search>
        </field>
    </record>

	</data>
</openerp>