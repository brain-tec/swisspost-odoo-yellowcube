<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <!-- We define here the data which must not be modified by the user. -->
	<data noupdate="0">
        <record id="connector.ir_cron_enqueue_jobs" model="ir.cron">
            <field name="name">PCAP - Enqueue Jobs</field>
        </record>

		<record id="purchase_order_merge_and_alarm" model="ir.cron">
			<field name="name">PCAP - Merge and alarm purchase orders</field>
			<field name="model">purchase.order</field>
			<field name="function">cron_merge_and_alarm_purchase_orders</field>
            <field name="args" eval="()" />
		</record>
		<record id="check_product_lot_expiry_dates" model="ir.cron">
			<field name="name">PCAP - Check lots expiry dates</field>
			<field name="model">product.product</field>
			<field name="function">check_product_lot_expiry_dates</field>
			<field name="args" eval="(None,)" />
		</record>
        <record id="send_invoices_to_partner" model="ir.cron">
            <field name="name">PCAP - Send Invoices to Partner</field>
            <field name="model">account.invoice</field>
            <field name="function">cron_send_invoices_to_partner</field>
            <field name="args" eval="()" />
        </record>
		<record id="put_apart_illegal_quantities" model="ir.cron">
			<field name="name">PCAP - Put Apart Illegal Quantities</field>
			<field name="model">stock.production.lot</field>
			<field name="function">put_apart_illegal_quantities</field>
			<field name="args" eval="(None,)" />
		</record>
		<record id="limit_the_amount_of_punchcards" model="ir.cron">
			<field name="name">PCAP - Limit the Amount of Punchcards</field>
			<field name="model">ir.cron.punchcard</field>
			<field name="function">limit_the_amount_of_punchcards</field>
			<field name="args" eval="(None,)" />
		</record>
	</data>

    <!-- We define here the data which may be modified by the user. -->
	<data noupdate="1">
		<record id="purchase_order_merge_and_alarm" model="ir.cron">
			<field name="interval_type">minutes</field>
			<field name="interval_number" eval="15" />
			<field name="numbercall" eval="-1" />
			<field name="doall" eval="True" />
			<field name="priority" eval="0" />
			<field name="active" eval="False" />
		</record>
		<record id="check_product_lot_expiry_dates" model="ir.cron">
			<field name="interval_type">hours</field>
			<field name="interval_number" eval="1" />
			<field name="numbercall" eval="-1" />
			<field name="doall" eval="True" />
			<field name="priority" eval="4" />
			<field name="active" eval="False" />
		</record>
        <record id="send_invoices_to_partner" model="ir.cron">
            <field name="interval_type">days</field>
            <field name="interval_number" eval="1" />
            <field name="numbercall" eval="-1" />
            <field name="doall" eval="True" />
            <field name="priority" eval="4" />
            <field name="active" eval="False" />
        </record>
        <record id="put_apart_illegal_quantities" model="ir.cron">
            <field name="interval_type">days</field>
            <field name="interval_number" eval="1" />
            <field name="numbercall" eval="-1" />
            <field name="doall" eval="True" />
            <field name="priority" eval="4" />
            <field name="active" eval="False" />
        </record>
		<record id="limit_the_amount_of_punchcards" model="ir.cron">
			<field name="interval_type">days</field>
			<field name="interval_number" eval="1" />
			<field name="numbercall" eval="-1" />
			<field name="doall" eval="True" />
			<field name="priority" eval="0" />
			<field name="active" eval="False" />
		</record>
	</data>

</openerp>
