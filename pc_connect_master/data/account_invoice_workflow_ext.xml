<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Overwritten so that an extra step is done after validating the
             invoice, consisting in applying the gift-cards (if any).
        -->
        <record id="account.act_open" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">open</field>
            <field name="action">action_date_assign()
action_move_create()
action_number()
invoice_validate()
apply_gift_cards()</field>
            <field name="kind">function</field>
        </record>

    </data>
</openerp>
