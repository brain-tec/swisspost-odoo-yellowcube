		<!-- sale.order -->
		<record model='report.file' id="standard_report_sale_order_this_month_by_product" forcecreate="False">
			<field name="name">Sales from this month (by Product)</field>
			<field name="model_id" ref="sale.model_sale_order" />
			<field name="domain">
				['&amp;',
				['date_order','&gt;=',(context_today()+relativedelta(months=0)).strftime('%Y-%m-01')],
				['date_order','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')],
				]
			</field>
			<field name="script">sale.order
			# group-by
			order_line/product_id
			date_order
			payment_method_id
			partner_id/main_category_id
			state
			# Aggregate data
			name count
			partner_id count
			</field>
		</record>
		
