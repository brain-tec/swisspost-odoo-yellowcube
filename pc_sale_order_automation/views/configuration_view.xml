<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="sale_order_clocking_config_view" model="ir.ui.view">
			<field name="name">sale_order_clocking_config_view</field>
			<field name="model">configuration.data</field>
			<field name="inherit_id" ref="pc_connect_master.post_ecommerce_config_view" />
			<field name="arch" type="xml">

                <page string="Sale Order" position="inside">
                    <group cols="2" name="soa" string="Sale Order Automation">
                        <field name="block_duplicated_quotations_from_webshop" />
                        <field name="soa_check_taxes" />
                        <field name="soa_check_uoms" />
                        <field name="soa_ignore_ship_excep" />
                        <field name="soa_ignore_inv_excep" />
                        <field name="soa_ratio_increase" />
                    </group>
                </page>

				<!-- Fills in the page for the alarming. -->
				<page string="Alarming" position="inside">
					<group cols="2">

						<group string="Sale Orders" colspan="2">
							<label for="sale_order_min_age_in_draft_value" />
							<div>
								<field name="sale_order_min_age_in_draft_value" style="width: 30%%;" />
								<field name="sale_order_min_age_in_draft_uom" class="oe_no_button"
									style="width: 65%%;" />
							</div>
							<label for="sale_order_max_age_in_draft_value" />
							<div>
								<field name="sale_order_max_age_in_draft_value" style="width: 30%%;" />
								<field name="sale_order_max_age_in_draft_uom" class="oe_no_button"
									style="width: 65%%;" />
							</div>
						</group>

					</group>
				</page>

                <group string="Partial Deliveries" position="after">
                    <group string="Packaging &amp; Franking Multi-Parcel Deliveries" colspan="2">
                        <field name="packaging_enabled" />
                        <field name="packaging_parcel_limit" attrs="{'readonly': [('packaging_enabled', '=', False)]}" />
                        <field name="packaging_carrier_bulk_freight_id" attrs="{'readonly': [('packaging_enabled', '=', False)]}" />
                        <field name="packaging_type_ids" />
                    </group>
                </group>

			</field>
		</record>

	</data>
</openerp>
