<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	<!--  Specific views for discount lines with price_unit having a different label -->
	
		<record id="view_invoice_line_form_1" model="ir.ui.view">
			<field name="name">account.invoice.line.form</field>
			<field name="model">account.invoice.line</field>
			<field name="type">form</field>
			<field name="priority" eval="100"/>
			<field name="arch" type="xml">
				<form string="Discount Invoice Lines">
					<field name="sequence" widget="handle" />
					<field name="is_discount" invisible="1" />
					<field name="is_subtotal" invisible="1" />
					<field name="name" />
					<field name="company_id" invisible="1" />
					<field name="account_id" groups="base.group_no_one" />
					<field name="discount_account_id" groups="account.group_account_user" />
					<field name="account_analytic_id" groups="analytic.group_analytic_accounting" />
					<field name="invoice_line_tax_id" widget="many2many_tags"
						context="{'type':parent.type}" />			
					<field name="price_unit" string="Discount Value" />
				</form>
			</field>
		</record>

		<record id="view_invoice_line_tree_1" model="ir.ui.view">
			<field name="name">account.invoice.line.tree</field>
			<field name="model">account.invoice.line</field>
			<field name="type">tree</field>
			<field name="priority" eval="100"/>
			<field name="arch" type="xml">
				<tree string="Discount Invoice Lines"
                colors="red:discount_type in ['subtotal'];
                black:discount_type in ['product'];
                green:discount_type not in ['subtotal','product'];">
                    <field name="discount_type" invisible="1" />
					<field name="sequence" widget="handle" />
					<field name="is_discount" invisible="1" />
					<field name="is_subtotal" invisible="1" />
					<field name="name" />
					<field name="company_id" invisible="1" />
					<field name="account_id" groups="base.group_no_one" />
					<field name="discount_account_id" groups="account.group_account_user" />
					<field name="account_analytic_id" groups="analytic.group_analytic_accounting" />
					<field name="invoice_line_tax_id" widget="many2many_tags"
						context="{'type':parent.type}" />			
					<field name="price_unit" string="Discount Value" />						
				</tree>
			</field>
		</record>
	</data>
</openerp>