<openerp>
    <data>
        <record id="view_order_product_tree_ext" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">sale.report.tree</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale.view_order_product_tree"/>
            <field name="arch" type="xml">
                <field name="nbr" position="before">
                    <field name="partner_shipping_id"/>
                    <field name="stock_type_id"/>
                    <field name="xx_price_subtotal" sum="Subtotal"/>
                </field>
            </field>
        </record>

        <record id="view_order_product_search_ext" model="ir.ui.view">
            <field name="name">sale.report.search</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale.view_order_product_search"/>
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="stock_type_id"/>
                </field>
            </field>
        </record>

        <!--Removing 'group_by_no_leaf':1 so that m2o fields are visible
            when opening the detail of lines -->
         <record id="sale.action_order_report_all"
                 model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">sale.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id" ref="view_order_product_search_ext"/>
            <field name="view_id" ref="view_order_product_tree_ext"/>
            <field name="context">{'search_default_year':1,'search_default_month':1,'search_default_User':1,'group_by':[]}</field>
            <field name="help">This report performs analysis on your quotations and sales orders. Analysis check your sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you should use the Invoice Analysis report in the Accounting application.</field>
        </record>

    </data>
</openerp>