<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Extended views. -->
        <record id="res_partner_reporting_tree_view_ext" model="ir.ui.view">
            <field name="name">res_partner_reporting_tree_view_ext</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="create_date" readonly="True" widget="date" />
                </field>
            </field>
        </record>

        <!-- Defines the filters. -->
        <record id="filter_customers_reporting" model="ir.ui.view">
            <field name="name">filter_customers_reporting</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <filter string="Country" position="after">
                    <filter string="Sign-up Date" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'create_date'}" />
                </filter>
            </field>
        </record>

        <!-- Defines the actions. -->
        <record id="action_customers_reporting" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="filter_customers_reporting" />
        </record>

        <!-- Defines the views associated to the actions. -->
        <record id="action_customers_reporting_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="0" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="res_partner_reporting_tree_view_ext" />
            <field name="act_window_id" ref="action_customers_reporting" />
        </record>
        <record id="action_customers_reporting_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="pc_connect_master.view_partner_form_ext" />
            <field name="act_window_id" ref="action_customers_reporting" />
        </record>

    </data>
</openerp>
