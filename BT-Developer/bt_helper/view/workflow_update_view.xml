		<record id="action_view_workflow_update" model="ir.actions.act_window">
			<field name="name">Update workflow</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">workflow_update</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
